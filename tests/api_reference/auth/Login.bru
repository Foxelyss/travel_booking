meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{host}}/api/auth/login
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  email: asd@a.com
  password: asd
}

body:multipart-form {
  email: asd@asd.com
  password: 123
}

script:post-response {
  bru.setVar("access_token", res.body.access_token)
}

tests {
  test("200", () => {
    expect(res.status).to.be.oneOf([200,201]);
  });
  
  
  test("JSON", () => {
    expect(res.status).to.be.oneOf([200,201]);
  });
  
  test("access", () => {
    expect(res.body.access_token).to.be.a.string;
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
