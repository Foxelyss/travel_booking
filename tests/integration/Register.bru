post {
  url: {{host}}/api/auth/login
  body: none
  auth: inherit
}

tests {
  test("Return 200", () => {
    expect(res.status).to.equal(200);
  });
  
  test("Content type is JSON", () => {
    expect(res.getHeader("content-type")).to.contain("application/json");
  });
  
  test("Returned token", () => {
    expect(res.token).to.be.a.string;
  });
}

